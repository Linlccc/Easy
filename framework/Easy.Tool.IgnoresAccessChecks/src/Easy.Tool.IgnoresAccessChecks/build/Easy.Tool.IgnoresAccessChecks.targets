<Project>
  <PropertyGroup>
    <!-- 制作的公开程序集存放的文件夹名 -->
    <MakeFolderName>IgnoresAccessChecks</MakeFolderName>
    <!-- 公开的程序集默认使用空方法体 -->
    <UseEmptyMethodBody Condition="$(UseEmptyMethodBody) == ''">true</UseEmptyMethodBody>
  </PropertyGroup>
  
  <!-- 生成公开的程序集 -->
  <Target Name="MakePublicInternal" AfterTargets="AfterResolveReferences">
    <MakePublicInternal IntermediateOutputPath="$([MSBuild]::NormalizeDirectory($(IntermediateOutputPath),$(MakeFolderName)))" SourceRefs="@(ReferencePath)"  IgnoresAccessChecksAssemblyNames="$(IgnoresAccessChecksAssemblyNames)" ExcludeTypeFullNames="$(ExcludeTypeFullNames)" UseEmptyMethodBody ="$(UseEmptyMethodBody)">
      <!-- 这里将我们生成的程序集添加到引用 -->
      <Output ItemName="ReferencePath" TaskParameter="MakePublicRefs" />
      <Output ItemName="Easy_Tool_IgnoresAccessChecks_RemoveRefs" TaskParameter="RemoveRefs" />
      <Output ItemName="Compile" TaskParameter="GeneratedCodeFiles" />
    </MakePublicInternal>
    <!-- 移除原来的引用 -->
    <ItemGroup>
      <ReferencePath Remove="@(Easy_Tool_IgnoresAccessChecks_RemoveRefs)" />
    </ItemGroup>
  </Target>

  <!-- 清理项目时清理生成的公开程序集 -->
  <Target Name="CleanMakePublicInternal" AfterTargets="Clean">
    <RemoveDir Directories="$([MSBuild]::NormalizeDirectory($(IntermediateOutputPath),$(MakeFolderName)))" />
  </Target>
</Project>