<Project>
  <PropertyGroup>
    <!--任务程序集,目前都是使用netstandard2.0版本，其他版本有依赖问题（当前文件位置\..\lib\netstandard2.0\程序集）-->
    <TaskAssembly>$(MSBuildThisFileDirectory)..\lib\netstandard2.0\$(MSBuildThisFileName).dll</TaskAssembly>
  </PropertyGroup>

  <!--定义默认元数据-->
  <ItemDefinitionGroup>
    <MainJsonFiles>
      <!--子目录（包含要合并的json文件），主Json文件中的节点-->
      <SubDirectoryNode>CustomConfigInfo:ConfigFileFolders</SubDirectoryNode>
      <!--排除子文件节点-->
      <ExcludeSubFilesNode>CustomConfigInfo:ExcludeSubFiles</ExcludeSubFilesNode>
    </MainJsonFiles>
  </ItemDefinitionGroup>
  <ItemGroup>
    <!--默认主要json文件-->
    <MainJsonFiles Include="appsettings*.json" />
    
    <!--默认导入当前项目所有json文件,排除生成文件夹中的-->
    <JsonFileItems Include="**\*.json" Exclude="$(BaseOutputPath)**\*;$(BaseIntermediateOutputPath)**\*;" />
  </ItemGroup>

  <!--注册任务-->
  <UsingTask TaskName="Easy.Tool.MergeJson.MergeJson" AssemblyFile="$(TaskAssembly)" />
</Project>
