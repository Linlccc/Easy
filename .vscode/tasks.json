{
  // 任务文档：https://code.visualstudio.com/docs/editor/tasks
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Easy.Tool.MergeJson.NuGetTest Build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/framework/Easy.Tool.MergeJson/tests/Easy.Tool.MergeJson.NuGetTest/Easy.Tool.MergeJson.NuGetTest.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "Easy.Tool.MergeJson.NuGetTest Watch",
      "type": "process",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/framework/Easy.Tool.MergeJson/tests/Easy.Tool.MergeJson.NuGetTest/Easy.Tool.MergeJson.NuGetTest.csproj"
      ],
      "problemMatcher": "$msCompile"
    },

    // 发布包任务
    {
      "label": "(发布包)ReleaseNuGet Easy.Tool.MergeJson",
      "type": "process",
      "command": "msbuild",
      "args": [ "-t:ReleaseNuGetToRemote"],
      "options":{ "cwd":"${workspaceFolder}/framework/Easy.Tool.MergeJson/src/" },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "(发布包)ReleaseNuGet asy.Extensions",
      "type": "process",
      "command": "msbuild",
      "args": [ "-t:ReleaseNuGetToRemote"],
      "options":{ "cwd":"${workspaceFolder}/framework/Easy.Extensions/src/" },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "(发布包)ReleaseNuGet Easy.Extensions.DependencyInjection",
      "type": "process",
      "command": "msbuild",
      "args": [ "-t:ReleaseNuGetToRemote"],
      "options":{ "cwd":"${workspaceFolder}/framework/Easy.Extensions.DependencyInjection/src/" },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "(发布包)ReleaseNuGet Easy.Extensions.DependencyInjection.Abstractions",
      "type": "process",
      "command": "msbuild",
      "args": [ "-t:ReleaseNuGetToRemote"],
      "options":{ "cwd":"${workspaceFolder}/framework/Easy.Extensions.DependencyInjection.Abstractions/src/" },
      "problemMatcher": "$msCompile"
    }
  ]
}