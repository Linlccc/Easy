    {
      "label": "build",
      "command": "dotnet",
      
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/framework/Easy.Extensions/tests/Easy.Extensions.Test/Easy.Extensions.Test.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/framework/Easy.Extensions/tests/Easy.Extensions.Test/Easy.Extensions.Test.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/framework/Easy.Extensions/tests/Easy.Extensions.Test/Easy.Extensions.Test.csproj"
      ],
      "problemMatcher": "$msCompile"
    },

    {
      "label": "custom1build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/framework/Easy.Tool.MergeJson/tests/Easy.Tool.MergeJson.NuGetTest/Easy.Tool.MergeJson.NuGetTest.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },

    {
      "label": "dir",
      "type": "shell",
      "command": "dir",
      "args": [
        "folder with spaces"
      ]
    }
  ]
